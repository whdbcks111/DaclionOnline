generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}


// 사용자 테이블
model User {
  id              Int         @id @default(autoincrement())

  username        String      @unique @db.VarChar(50)
  email           String      @unique @db.VarChar(100)
  passwordHash    String      @db.VarChar(255)
  passwordSalt    String      @db.VarChar(128)

  nickname        String      @unique @db.VarChar(50)
  profileImage    String?     @db.VarChar(255) @map("profile_image")
  permission      Int         @default(0)

  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")

  player          Player?

  @@map("users")
}

// 플레이어 테이블
model Player {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique @map("user_id")
  user      User     @relation(fields: [userId], references: [id])

  level      Int      @default(1)
  exp        Int      @default(0)
  maxWeight  Float    @default(100.0) @map("max_weight")
  stats      Json?
  locationId Int      @default(1) @map("location_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  items      Item[]
  equipments Equipment[]

  @@map("players")
}

// 아이템 정의 테이블 (마스터 데이터)
model ItemData {
  id            Int         @id @default(autoincrement())

  name          String      @db.VarChar(100)
  description   String      @db.VarChar(500)
  category      String      @db.VarChar(50)
  weight        Float       @default(0)
  stackable     Boolean     @default(false)
  maxStack      Int         @default(1) @map("max_stack")
  baseMetadata  Json?       @map("base_metadata")
  onUse         String?     @db.VarChar(100) @map("on_use")
  equipSlot     String?     @db.VarChar(50) @map("equip_slot")
  modifiers     Json?
  baseDurability Int?       @map("base_durability")

  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  items      Item[]
  equipments Equipment[]

  @@map("item_data")
}

// 플레이어 인벤토리 아이템 테이블
model Item {
  id          Int       @id @default(autoincrement())

  playerId    Int       @map("player_id")
  player      Player    @relation(fields: [playerId], references: [id], onDelete: Cascade)

  itemDataId  Int       @map("item_data_id")
  itemData    ItemData  @relation(fields: [itemDataId], references: [id])

  count       Int       @default(1)
  durability  Int?
  metadata    Json?

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@index([playerId])
  @@index([itemDataId])
  @@map("items")
}

// 장비 슬롯 테이블
model Equipment {
  id          Int       @id @default(autoincrement())

  playerId    Int       @map("player_id")
  player      Player    @relation(fields: [playerId], references: [id], onDelete: Cascade)

  itemDataId  Int       @map("item_data_id")
  itemData    ItemData  @relation(fields: [itemDataId], references: [id])

  slot        String    @db.VarChar(50)
  slotIndex   Int       @default(0) @map("slot_index")
  durability  Int?
  metadata    Json?

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@unique([playerId, slot, slotIndex])
  @@index([playerId])
  @@map("equipments")
}

// 몬스터 정의 테이블 (마스터 데이터)
model MonsterData {
  id          Int      @id @default(autoincrement())

  name        String   @db.VarChar(100)
  level       Int      @default(1)
  exp         Int      @default(0)
  baseAttribute Json   @map("base_stats")
  drops       Json?
  expReward   Int      @default(0) @map("exp_reward")
  equipments  Json?

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("monster_data")
}

// 장소 정의 테이블 (마스터 데이터)
model LocationData {
  id          Int      @id @default(autoincrement())

  name        String   @db.VarChar(100)
  x           Float    @default(0)
  y           Float    @default(0)
  z           Float    @default(0)
  spawns      Json?
  connections Json?

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("location_data")
}
